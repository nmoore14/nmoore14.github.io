<style>
  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }

  .social-links-chaotic {
    display: flex;
    flex-direction: row;
    position: relative;
    gap: 0;
    width: fit-content;
  }

  .social-link {
    color: hsl(var(--foreground));
    transition: all 0.2s ease;
  }

  .social-link:hover {
    color: hsl(var(--primary));
    transform: translateY(-2px);
  }

  .social-link-chaotic {
    padding: 0.75rem;
    border-radius: 9999px;
    transform: rotate(var(--rotation, 0deg));
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    margin-left: -0.75rem;
    order: var(--order);
    border: 2px solid hsl(var(--background));
    z-index: calc(3 - var(--order));
    position: relative;
    overflow: hidden;
    background-size: 200% 200%;
  }

  .social-links-chaotic:hover .social-link-chaotic {
    margin-left: 0;
    animation: gradient 3s ease infinite;
  }

  .social-link-chaotic:hover {
    transform: rotate(0deg) scale(1.1);
    z-index: 10;
  }

  .social-link-chaotic.linkedin {
    --rotation: -5deg;
    background: linear-gradient(45deg, 
      hsl(var(--primary)) 0%,
      hsl(var(--secondary)) 50%,
      hsl(var(--accent)) 100%
    );
    color: hsl(var(--background));
  }

  .social-link-chaotic.twitter {
    --rotation: 5deg;
    background: linear-gradient(45deg,
      hsl(var(--accent)) 0%,
      hsl(var(--primary)) 50%,
      hsl(var(--secondary)) 100%
    );
    color: hsl(var(--background));
  }

  .social-link-chaotic.github {
    --rotation: -3deg;
    background: linear-gradient(45deg,
      hsl(var(--secondary)) 0%,
      hsl(var(--accent)) 50%,
      hsl(var(--primary)) 100%
    );
    color: hsl(var(--background));
  }

  .social-icon {
    width: 2rem;
    height: 2rem;
  }

  .social-link-chaotic .social-icon {
    width: 1.75rem;
    height: 1.75rem;
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1));
  }
</style> 